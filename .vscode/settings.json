{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true,
  "eslint.packageManager": "yarn",
  "eslint.workingDirectories": [
    {
      "directory": "react",
      "changeProcessCWD": true
    },
    {
      "directory": "node",
      "changeProcessCWD": true
    }
  ],
  "[markdown]": {
    "editor.formatOnSave": false
  }
}
